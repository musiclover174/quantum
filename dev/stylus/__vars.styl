imgCentering()
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%) scale(1)
  transition 1s transform
  will-change transform
  
imgCenteringMax90()
  position absolute
  left 50%
  top 50%
  max-width 90%
  max-height 90%
  transform translate(-50%, -50%) scale(1)
  transition 1s transform
  will-change transform
  
imgCenteringMax100()
  position absolute
  left 50%
  top 50%
  max-width 100%
  max-height 100%
  transform translate(-50%, -50%) scale(1)
  transition 1s transform
  will-change transform

imgCenteringMin()
  position absolute
  left 50%
  top 50%
  min-height 100%
  min-width 100%
  transform translate(-50%, -50%) scale(1)
  will-change transform
  
imgCenteringZoom()
  transform translate(-50%, -50%) scale(1.02)
  
