.catalog
  mb 54px
  @media $LandscapeMin
    mb 70px
  &_sect,
  &_inner
    mb 0
  &_sect
    pos relative
    &:before
      content ""
      pos absolute
      bgc #e8ebf5
      l 0
      t -65px
      r 0
      b -90px
  .container
    pos relative
  &__over
    df()
    flex-wrap wrap
    ml -30px
    w calc(100% + 30px)
    @media $LandscapeMin
      w calc(100% + 40px)
      ml -40px
  &__imgover
    dfv(center)
    w 100%
    pos relative
    z-index 1
    h 328px
    justify-content flex-end
    pb 33px
    mb 22px
    transform translateZ(0)
    transform-style preserve-3d
    backface-visibility hidden
    @media $PortraitMax
      h 230px
    @media $PortraitMedium
      pb 0
      h auto
  &__img
    pos relative
    z-index 1
    max-width 90%
    max-height 100%
    transform translateZ(100px)
    transition .7s filter
  &__border
    pos absolute
    w 100%
    pt calc(100% - 4px)
    b 0
    l 0
    border 2px solid #e8ebf5
    border-radius 5px
    overflow hidden
    transition .7s border-color
    &:before
      content ""
      pos absolute
      h 0
      w 100%
      l 0
      b 0
      bgc #075e9d
      background linear-gradient(to bottom, #0198ff 0%,#0198ff 10%,#075e9d 100%)
      transition .7s height
    @media $PortraitMedium
      dn()
  &__elem
    w calc(25% - 30px)
    ml 30px
    text-align center
    mb 34px
    &:hover ^[0]__border
      border-color transparent
      &:before
        h 100%
    @media $LandscapeMedium
      w calc(100% / 3 - 30px)
    @media $LandscapeMin
      w calc(50% - 40px)
      ml 40px
    @media $PortraitMedium
      w calc(100% - 40px)
      mb 80px
    &_more
      & ^[0]__name
        letter-spacing 0
      & ^[0]__imgover
        pb 21%
        @media $PortraitMedium
          pb 0
      &:hover ^[0]__img
        filter brightness(0) invert(1)
        @media $PortraitMedium
          filter none
  &__name
    c $blue
    fontify 25px 700 24px
    border-bottom 1px solid alpha($blue, .4)
    letter-spacing .06em
    transition .7s border
    @media $PortraitMax
      fontify 20px 700 22px
    &:hover
      border-color transparent
    span
      pos relative
      t 4px
  &__desc
    color $dark
    fontify 16px 300 24px
    mt 20px
    text-align center
  &__tocat
    pos absolute
    t 24px
    r 0
    @media $LandscapeMax
      t 18px
    @media $LandscapeMin
      pos relative
      t 0
      r auto
  &__hrefs
    mt 20px
    &-item
      & + &
        mt 4px
  &__href
    color $dark
    fontify 16px 300 20px
    border-bottom 1px solid alpha($dark, .2)
    transition .7s border-color
    &:hover
      border-color transparent
  &__sect
    df()
  &__list + .pagination
    mt 60px
  &__item
    display flex
    align-items stretch
    min-height 275px
    background-color #f6f7fb
    border-radius 5px
    @media $PortraitMax
      flex-direction column
      align-items flex-start
    & + &
      mt 10px
    &-imgover
      dfv(center)
      justify-content center
      flex-shrink 0
      w 275px
      bgc white
      transition .7s opacity
      @media $PortraitMax
        w 100%
        h 275px
      &:hover
        opacity .7
    &-img
      max-width 90%
      max-height 90%
    &-content
      w calc(100% - 275px)
      padding 30px 39px 35px 39px
      @media $PortraitMax
        w 100%
      @media $PortraitMedium
        padding 15px 20px 20px 20px
    &-href
      color $dark
      fontify 24px 600 34px
      border-bottom 1px solid alpha($dark, .2)
      transition .7s border, .7s color
      @media $PortraitMedium
        fontify 20px 600 28px
      span
        pos relative
        t 4px
        @media $PortraitMedium
          t 2px
      &:hover
        border-color transparent
        color $blue
    &-dsc
      mt 18px
      color $dark
      fontify 16px 300 24px
  &__aside
    w 270px
    flex-shrink 0
    @media $LandscapeMax
      dn()
  &__left
    w calc(100% - 300px)
    mr 30px
    @media $LandscapeMax
      mr 0
      w 100%
  &__sticky
    dfv()
    bgc #075e9d
    border-radius 5px
    padding 19px 0
  &__other
    pos relative
    w 100%
    color white
    fontify 16px 700 20px
    text-transform uppercase
    letter-spacing .1em
    padding 16px 45px
    transition .7s background
    &:hover
      background-color #2d77ac
    & + &:before
      content ""
      pos absolute
      t 0
      l 45px
      r 45px
      h 1px
      background-color #2d77ac
      transition .7s opacity
    &:hover + &:before
      opacity 0
  &__filter
    mb 10px
    border-radius 5px
    bgc #f6f7fb
    &-opener
      padding 17px 40px
      @media $PortraitMedium
        padding 13px 20px
    &-href
      cursor pointer
      position relative
      color $dark
      font-family $slab
      fontify 16px 700 18px
      border-bottom 1px dotted $blue
      transition .7s border
      @media $PortraitMedium
        fontify 14px 700 16px
      @media $Mobile
        fontify 13px 700 15px
      &:after
        content ""
        pos absolute
        t 8px
        r -19px
        size 10px 6px
        background url('data:image/png;base64,') no-repeat center
        transition .7s transform
        will-change transform
        @media $PortraitMedium
          t 6px  
        @media $Mobile
          t 5px
          r -14px
      &:hover
        border-color transparent
      &.open:after
        transform rotate(180deg)
    &-content
      dn()
      &.open
        df()
      flex-wrap wrap
      bgc white
      border-radius 0px 0px 5px 5px
      padding 34px 40px 20px 10px
      @media $PortraitMedium
        padding 15px 20px 7px 20px
      .fakecheckbox
        ml 30px
        mb 15px
        w calc(100% / 3 - 30px)
        @media $PortraitMax
          w calc(50% - 30px)
        @media $PortraitMedium
          w 100%
          ml 0
      .fakecheckbox__label
        color $dark
        pl 40px
        pt 12px
        font-size 16px
        @media $PortraitMedium
          font-size 14px
        &:before
          size 25px
          border 1px solid #cedfec
        &:after
          size 15px 11px
          l 6px
          t 16px
          background url('data:image/png;base64,') no-repeat center