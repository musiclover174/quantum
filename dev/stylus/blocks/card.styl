.card
  df()
  pt 8px
  @media $LandscapeMax
    flex-direction column
  &__side
    w 460px
    flex-shrink 0
    @media $LandscapeMax
      w 100%
      max-width 710px
  &__main
    w calc(100% - 500px)
    ml 40px
    @media $LandscapeMax
      w 100%
      ml 0
      mt 60px
  &__sticky
    border 2px solid #e8ebf5
    border-radius 5px
    @media $LandscapeMax
      position static !important
      width 100% !important
      transform none !important
  &__imgover
    size 100% 526px
    dfv(center)
    justify-content center
    @media $LandscapeMedium
      h 400px
  &__img
    max-width 90%
    max-height 90%
  &__docs
    &-list
      df()
      flex-wrap wrap
      bgc #f6f7fb
      border-radius 0px 0px 5px 5px
      padding 23px 38px 3px
      @media $PortraitMedium
        padding 23px 28px 3px
    &-item
      w 50%
      pr 20px
      pl 25px
      mb 18px
      pos relative
      @media $PortraitMedium
        w 100%
        pr 0
    &-href
      pos relative
      color $dark
      fontify 16px 300 24px
      border-bottom 1px solid alpha($dark, .4)
      transition .7s border
      &:before
        content ""
        pos absolute
        l -25px
        t 3px
        size 13px 15px
        background url('data:image/png;base64,') no-repeat center
      &:hover
        border-color transparent
  &__textblock
    table:not([class])
      min-width 100%
      @media $PortraitMedium
        min-width 400px
      tr:nth-child(2n)
        background #f8f9fc
    & + &
      mt 41px
  &__order
    text-transform uppercase
    letter-spacing .1em
    padding 0 31px
    fontify 13px 700 49px
    @media $PortraitMin
      padding 0 17px
    &-wrapper
      df(flex-start)
      justify-content space-between
      mb 51px
      @media $PortraitMedium
        flex-direction column
        .ya-share2
          mt 30px
  &__features
    df()
    pt 6px
    flex-wrap wrap
    ml -70px
    w calc(100% + 70px)
    mb -16px
    @media $LandscapeMax
      ml -40px
      w calc(100% + 40px)
  &__feature
    w calc(50% - 70px)
    ml 70px
    mb 24px
    @media $LandscapeMax
      w calc(25% - 40px)
      ml 40px
    @media $LandscapeMedium
      w calc(50% - 40px)
    @media $PortraitMedium
      w calc(100% - 40px)
    &-top
      df(center)
    &-icon
      mr 12px
    &-title
      color $dark
      fontify 16px 600 24px
    &-text
      color $dark
      fontify 16px 300 24px
      mt 8px
      max-width 270px
  &__scheme
    db()
    mt 23px
    // mb 52px
    pos relative
    w 100%
    max-width 483px
    justify-content center
    bgc white
    border 2px solid #e8ebf5
    border-radius 5px
    padding 20px 0
    &-img
      max-width 100%
  &__gallery
    df()
    flex-wrap wrap
    ml -20px
    w calc(100% + 20px)
    pt 6px
    &-item
      overflow hidden
      pos relative
      w calc(100% / 3 - 20px)
      ml 20px
      mb 20px
      border-radius 5px
      @media $PortraitMedium
        w calc(50% - 20px)
    &-href
      pos relative
      db()
      pt 76%
      &:before
        content ""
        opacity 0
        bgc #e8ebf5
        pos absolute
        t 0
        l 0
        r 0
        b 0
        z-index 1
        transition .7s opacity
      &:hover:before
        opacity .9
      &:after
        content ""
        pos absolute
        z-index 2
        size 58px
        opacity 0
        border 2px solid #075e9d
        border-radius 50%
        t 50%
        l 50%
        mt -31px
        ml -31px
        background url('data:image/png;base64,') no-repeat center
        transition .7s opacity
      &:hover:after
        opacity 1
    &-img
      pos absolute
      l 0
      t 0
      r 0
      b 0
      object-fit contain
      font-family 'object-fit: contain;'
      min-width 100%