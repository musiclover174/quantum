.footer
  margin 0 50px
  bgc whitesmoke
  @media $desktopMax
    margin 0 30px
  @media $desktopMedium
    margin 0
  &__top
    display flex
    justify-content space-between
    align-items center
    padding 48px 0 37px
    @media $LandscapeMax
      dn()
  &__logo
    ml -23px
    mr 20px
    @media $desktopMin
      ml 0
    &-img
      @media $LandscapeMax
        w 120px
  &__side
    display flex
    flex-direction column
    align-items flex-end
    pt 12px
    @media $desktopMin
      flex-direction column-reverse
  &__info
    display flex
    align-items flex-start
    mt 30px
    @media $desktopMin
      mt 0
      mb 30px
  &__addr
    color $dark
    fontify 16px 300 16px
    pos relative
    ml 21px
    &:before
      content ""
      pos absolute
      l -21px
      t -1px
      size 12px 17px
      background url("data:image/png;base64,") no-repeat center
  &__phone
    pos relative
    ml 52px
    color $dark
    fontify 16px 600 16px
    &:before
      content ""
      pos absolute
      l -25px
      t 1px
      size 15px
      background url("data:image/png;base64,") no-repeat center
  &__mail
    color $dark
    fontify 16px 300 16px
    pos relative
    ml 55px
    border-bottom 1px dotted alpha($blue, .3)
    transition .7s border
    &:hover
      border-color transparent
    &:before
      content ""
      pos absolute
      l -25px
      t 3px
      size 15px 10px
      background url("data:image/png;base64,") no-repeat center
  &__bottom
    display flex
    justify-content space-between
    align-items center
    padding 32px 0
    border-top 1px solid alpha(#c8cad4, .6)
    @media $LandscapeMax
      border 0
    @media $PortraitMedium
      flex-direction column
      align-items flex-start
  &__copy
    color alpha($dark, .5)
    fontify 16px 400 20px
  &__dextra
    pos relative
    color $dark
    font-family Verdana, Geneva, sans-serif
    fontify 9px 400 14px
    text-transform uppercase
    letter-spacing 0.18em
    @media $PortraitMedium
      l 84px
      mt 20px
    span
      pos absolute
      t 3px
      r calc(100% + 10px)
      bgc $blue
      color white
      font-family Arial
      fontify 12px 900 21px
      text-transform uppercase
      letter-spacing 0.1em
      border-radius 3px
      padding 0 6px
      transition 0.7s background
    &:hover span
      background-color #cbdcea

.popup
  max-width 922px
  w 90%
  bgc $blue
  border-radius 5px
  padding 50px 60px
  font-family $os
  color white
  @media $PortraitMax
    w 94%
    padding 20px 30px
  &__title
    font-family $slab
    fontify 36px 700 43px
    mb 17px
    @media $desktopMin
      fontify 30px 700 37px
    @media $PortraitMedium
      fontify 26px 700 32px
    @media $PortraitMin
      fontify 19px 700 24px
  &__subtitle
    fontify 16px 300 22px
    max-width 430px
    mb 29px
  &__hint
    fontify 16px 300 22px
    mb 37px
  &__sbm
    bgc white
    white-space nowrap
    color $blue
    fontify 13px 700 48px
    text-transform uppercase
    letter-spacing .1em
    padding 0 40px
    transition .7s background, .7s color
    &:hover
      background-color alpha(#e8ebf5, .9)
  &__warntext
    color #ff0f37
    fontify 13px 300 15px
    width 175px
    mr 25px
    opacity 0
    transition .7s opacity
    @media $PortraitMedium
      dn()
    ^[0]__form.warning &
      opacity 1
      @media $PortraitMedium
        db()
        mb 20px
        w 100%
  &__submitover
    display flex
    align-items center
    ml 30px
    @media $LandscapeMedium
      mt 30px
      ml 0
      w 100%
      justify-content space-between
    @media $PortraitMedium
      flex-direction column
      justify-content flex-start
      align-items flex-start
  &__bottom
    df(center)
    w 100%
    justify-content space-between
    @media $LandscapeMedium
      flex-direction column
      align-items flex-start
  .common__fileover
    mb -20px