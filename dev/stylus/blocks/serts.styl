.serts
  pos relative
  mb 83px
  @media $LandscapeMin
    mb 50px
  .container
    pos relative
  &__over
    pos relative
    mt 44px
    .swiper-buttons
      @media $desktopMedium
        df()
        pos relative
        mt 40px
        justify-content center
      @media $LandscapeMin
        justify-content flex-start
    .swiper-button-next,
    .swiper-button-prev
      mt 0
      t 160px
      @media $desktopMax
        t 135px
      @media $desktopMedium
        pos relative
        t 0
        mt 0
        l auto
        r auto
    .swiper-button-next
      @media $desktopMedium
        ml 20px
      @media $PortraitMin
        ml 10px
  &__imgover
    db()
    pos relative
    bgc #f6f7fb
    border-radius 5px
    padding 20px
    mb 23px
    &:before
      content ""
      pos absolute
      t 20px
      b 20px
      l 20px
      r 20px
      bgc alpha(#e8ebf5, 0)
      transition .7s background-color
    &:after
      content ""
      pos absolute
      t 50%
      l 50%
      size 62px
      mt -31px
      ml -31px
      border-radius 50%
      background-repeat no-repeat
      background-position center
      background-image url("data:image/png;base64,")
      opacity 0
      transition .7s opacity
    &:hover:before
      bgc alpha(#e8ebf5, .9)
    &:hover:after
      opacity 1
  &__img
    border-radius 3px
    max-width 100%
    @media $PortraitMedium
      w 100%
  &__name
    c $dark
    fontify 16px 300 24px
    text-align center
    padding 0 15px
  &__tocat
    pos absolute
    t 24px
    r 0
    @media $LandscapeMax
      t 18px
    @media $LandscapeMin
      pos relative
      t 0
      r auto
      mt -33px